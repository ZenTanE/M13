<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/txtVData_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgVData_minFood"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:text="precio: €€" />

    <ImageView
        android:id="@+id/imgVData_minFood"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/txtVData_nameFood"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/plato2" />

    <TextView
        android:id="@+id/txtVData_nameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Nombre platillo" />

</RelativeLayout>