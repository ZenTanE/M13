<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listitemImageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/callos" />

    <TextView
        android:id="@+id/listitemTextView1"
        android:layout_width="208dp"
        android:layout_height="30dp"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@+id/listitemImageView1"
        android:hint="@string/Nombre_Plato"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/listitemTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listitemTextView1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/listitemImageView1"
        android:text="cantidad"
        android:textColor="#8E8787"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/listitemTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listitemTextView1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:text="precio"
        android:textColor="#FF8E8787"
        android:textSize="19sp" />

</RelativeLayout>